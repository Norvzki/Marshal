{
  "javascript": {
    "globals": [
      "chrome",
      "document",
      "window",
      "console",
      "fetch",
      "location",
      "setTimeout",
      "setInterval",
      "clearInterval",
      "alert",
      "Promise",
      "Date",
      "Object",
      "Array",
      "String",
      "Number",
      "JSON",
      "Math",
      "RegExp",
      "Error"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUndeclaredVariables": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noUnusedVariables": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["*.js"],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "off"
          }
        }
      }
    }
  ]
}
